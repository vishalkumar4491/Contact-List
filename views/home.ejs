<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
    <!-- font-awesome -->
    
    <!-- path is according to assetes (static) folder sice it is static -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css">
    <link rel="stylesheet" href="/css/home.css">
    <title>
        <%= locals.title %>
    </title>
    
</head>
<body>
    <!-- <h1>home of ejs</h1> -->

    <h1 id="main-heading"><i class="fas fa-address-book"></i>  Contact List</h1>

    <div>
        <ul>
            <% for (let i of contact_list){%>
                <li>
                    <div class="main-content">
                        <p>
                            <i class="fas fa-user-alt"></i>
                            <%= i.name %>
                        </p>
                        <p>
                            <%= i.phone %>
                        </p>
                    </div>
                    <div class="delete">
                        <!-- for deleting suing param string param or query param -->
                        <!-- this is the query param -->
                        <a href="/delete-contact/?id=<%= i._id %>">
                            <i class="fas fa-window-close"></i>
                        </a>
                    </div>
                </li>        
            <%} %>
        </ul>
    </div>

    <form action="/create-contact" method="POST">
        <input type="text" name="name" placeholder="Name" required>
        <input type="number" name="phone" placeholder="Enter Phone No." required>
        <button type="submit">Add Contact</button>
    </form>

    <script src="./js/home.js" type = 'text/javascript'></script>
    
    
</body>
</html>